<style>
	/* ===== HERO SECTION ===== */
	.hero {
		position: relative;
		min-height: clamp(400px, 60vh, 600px);
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(135deg, rgba(242, 234, 5, 0.9), rgba(255, 0, 0, 0.8)), 
		            url('https://images.pexels.com/photos/3184292/pexels-photo-3184292.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
		background-size: cover;
		background-position: center;
		background-attachment: fixed;
		color: white;
		margin: -3rem -2rem 3rem -2rem;
		border-radius: 0 0 2rem 2rem;
		overflow: hidden;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(39, 39, 39, 0.3), rgba(255, 0, 0, 0.2));
		z-index: 1;
	}

	.hero-content {
		position: relative;
		z-index: 2;
		text-align: center;
		max-width: 800px;
		padding: 2rem;
		animation: fadeInUp 1s ease-out;
	}

	.hero-title {
		font-size: clamp(2.5rem, 8vw, 4.5rem);
		margin-bottom: 1rem;
		color: white;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
		background: none;
		-webkit-text-fill-color: white;
	}

	.hero-subtitle {
		font-size: clamp(1.2rem, 4vw, 1.8rem);
		margin-bottom: 2rem;
		color: rgba(255, 255, 255, 0.95);
		text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
	}

	.hero-cta {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.cta-button {
		display: inline-flex;
		align-items: center;
		padding: 1rem 2rem;
		border-radius: 50px;
		font-weight: 700;
		text-decoration: none;
		transition: all 0.3s ease;
		min-width: 160px;
		justify-content: center;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
	}

	.cta-button.primary {
		background: var(--primary-red);
		color: white;
	}

	.cta-button.primary:hover {
		background: var(--red-dark);
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(255, 0, 0, 0.4);
	}

	.cta-button.secondary {
		background: var(--primary-yellow);
		color: var(--raisin-black);
	}

	.cta-button.secondary:hover {
		background: var(--yellow-dark);
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(242, 234, 5, 0.4);
	}

	/* ===== SECTIONS ===== */
	.featured, .features {
		margin: 4rem 0;
	}

	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.section-title {
		font-size: clamp(2rem, 5vw, 3rem);
		margin-bottom: 1rem;
		background: linear-gradient(135deg, var(--primary-red), var(--primary-yellow));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.section-subtitle {
		font-size: clamp(1rem, 3vw, 1.3rem);
		color: var(--text-secondary);
		max-width: 600px;
		margin: 0 auto;
	}

	/* ===== CARDS GRID ===== */
	.cards-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	/* ===== INFO CARD STYLES ===== */
	.info-card {
		background: #FFFFFF;
		border-radius: 1rem;
		overflow: hidden;
		box-shadow: 0 4px 15px rgba(39, 39, 39, 0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		text-decoration: none;
		color: #000000;
		border: 1px solid rgba(0, 0, 0, 0.1);
	}

	.info-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 25px rgba(39, 39, 39, 0.15);
	}

	.card-image {
		position: relative;
		height: 200px;
		overflow: hidden;
	}

	.card-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.info-card:hover .card-image img {
		transform: scale(1.05);
	}

	.card-overlay {
		position: absolute;
		top: 1rem;
		right: 1rem;
		background: rgba(255, 255, 255, 0.8); /* Slightly less opaque for subtlety */
		border-radius: 50%;
		width: 40px; /* Adjusted size */
		height: 40px; /* Adjusted size */
		display: flex;
		align-items: center;
		justify-content: center;
		/* backdrop-filter: blur(5px); -- Optional: removed for wider compatibility/simplicity */
	}

	.card-icon {
		font-size: 1.25rem; /* Adjusted size */
	}

	.card-content {
		padding: 1.5rem;
		background: #FFFFFF; 
	}

	.card-title {
		font-size: 1.3rem;
		margin-bottom: 0.5rem;
		color: #000000; 
		font-weight: 600;
	}

	.card-description {
		color: #333333; 
		margin-bottom: 1rem;
		line-height: 1.6;
	}

	.card-action {
		color: var(--primary-red);
		font-weight: 600;
		font-size: 0.9rem;
		transition: color 0.3s ease;
	}

	.info-card:hover .card-action {
		color: var(--red-dark);
	}

	/* ===== FEATURES SECTION ===== */
	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
	}

	/* ===== FEATURE ITEM STYLES ===== */
	.feature-item {
		text-align: center;
		padding: 2rem 1rem;
		background: #FFFFFF;
		border-radius: 1rem;
		box-shadow: 0 4px 15px rgba(39, 39, 39, 0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		border: 1px solid rgba(0, 0, 0, 0.1);
	}

	.feature-item:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 25px rgba(39, 39, 39, 0.15);
	}

	.feature-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
		display: block;
	}

	.feature-item h3 {
		color: #000000; 
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.feature-item p {
		color: #333333; 
		line-height: 1.6;
	}

	/* ===== ANIMATIONS ===== */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* ===== RESPONSIVE DESIGN ===== */
	@media (max-width: 768px) {
		.hero {
			margin: -1rem -1rem 2rem -1rem;
			border-radius: 0 0 1rem 1rem;
			background-attachment: scroll;
		}

		.hero-content {
			padding: 1rem;
		}

		.hero-cta {
			flex-direction: column;
			align-items: center;
		}

		.cta-button {
			width: 100%;
			max-width: 280px;
		}

		.cards-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.features-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.feature-item {
			padding: 1.5rem 1rem;
		}
	}

	@media (max-width: 480px) {
		.hero-title {
			font-size: 2rem;
		}

		.hero-subtitle {
			font-size: 1rem;
		}

		.section-title {
			font-size: 1.8rem;
		}

		.card-content {
			padding: 1rem;
		}
	}

	/* ===== ACCESSIBILITY ===== */
	@media (prefers-reduced-motion: reduce) {
		.hero-content {
			animation: none;
		}

		.info-card, .feature-item {
			transition: none;
		}

		.hero {
			background-attachment: scroll;
		}
	}

	/* ===== HIGH CONTRAST MODE ===== */
	@media (prefers-contrast: high) {
		.info-card, .feature_item {
			background: #FFFFFF;
			border: 2px solid #000000;
		}
		
		.card-title, .feature-item h3 {
			color: #000000;
		}
		
		.card-description, .feature-item p {
			color: #000000;
		}
		.card-overlay {
			background: #FFFFFF;
			border: 1px solid #000000;
		}
	}
</style>