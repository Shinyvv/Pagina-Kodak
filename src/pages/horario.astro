---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Horario - ${SITE_TITLE}`} description="Nuestros horarios de atención" />
	</head>
	<body style="background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);">
		<Header />
		<main>
			<h1 style="text-align: center;">Horario de Atención</h1>
			<div class="schedule-container">
				<div class="schedule-card">
					<h2 style="text-align: center;">Horario Regular</h2>
					<table class="schedule-table">
						<tr>
							<td>Lunes</td>
							<td>9:30 - 18:30</td>
						</tr>
						<tr>
							<td>Martes</td>
							<td>9:30 - 18:30</td>
						</tr>
						<tr>
							<td>Miércoles</td>
							<td>9:30 - 18:30</td>
						</tr>
						<tr>
							<td>Jueves</td>
							<td>9:30 - 18:30</td>
						</tr>
						<tr>
							<td>Viernes</td>
							<td>9:30 - 18:30</td>
						</tr>
						<tr>
							<td>Sábado</td>
							<td>10:00 - 18:30</td>
						</tr>
						<tr>
							<td>Horario de Colación: Lunes - Viernes</td>
							<td>14:00 - 14:30</td>
						</tr>
						<tr>
							<td>Horario de Colación: Sábado</td>
							<td>14:00 - 13:00</td>
						</tr>	
					</table>
				</div>
				<div class="info-card">
					<h2 style="text-align: center;">Info Adicional</h2>
					<ul>
						<li>Abierto casi todos los días del año</li>
						<li>Cerrado en dias festivos y Domingos</li>
					</ul>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	body {
		margin: 0;
		padding: 0;
		/* background gradient applied inline */
	}
	main {
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	.schedule-container {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-top: 2rem;
		justify-items: center;
		width: 100%;
		max-width: 900px;
	}

	/* ===== SCHEDULE AND INFO CARDS ===== */
	.schedule-card, .info-card {
		background: #FFFFFF; 
		padding: 2rem;
		border-radius: 1rem; /* Standardized radius */
		box-shadow: 0 4px 15px rgba(39, 39, 39, 0.1); /* Standardized shadow */
		width: 100%;
		max-width: 400px;
		margin: 0 auto;
		border: 1px solid rgba(0, 0, 0, 0.1); /* Standardized border */
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.schedule-card:hover, .info-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 25px rgba(39, 39, 39, 0.15);
	}


	.schedule-card h2, .info-card h2 {
		color: #000000; 
		font-weight: 600;
		text-align: center; /* Kept from original */
	}

	.schedule-table {
		width: 100%;
		margin-top: 1rem;
	}
	.schedule-table tr {
		border-bottom: 1px solid #eee;
	}
	.schedule-table td {
		padding: 1rem 0;
		color: #000000; /* Changed to black */
	}
	.schedule-table td:last-child {
		text-align: right;
		font-weight: bold;
		color: #000000; 
	}
	.info-card ul {
		list-style-type: none;
		padding: 0;
		margin: 1rem 0;
	}
	.info-card li {
		padding: 0.5rem 0;
		border-bottom: 1px solid #eee;
		color: #000000; /* Changed to black */
	}
	.contact-info {
		margin-top: 2rem;
	}
	.contact-info h3 {
		margin-bottom: 1rem;
		color: #000000; 
	}

	/* ===== HIGH CONTRAST MODE ===== */
	@media (prefers-contrast: high) {
		.schedule-card, .info-card {
			background: #FFFFFF;
			border: 2px solid #000000;
		}
		
		.schedule-card h2, .info-card h2, .contact-info h3 {
			color: #000000;
		}
		
		.schedule-table td, .info-card li {
			color: #000000;
		}
	}

	/* ===== PRINT STYLES ===== */
	@media print {
		.schedule-card, .info-card {
			break-inside: avoid;
			box-shadow: none;
			border: 1px solid #000000;
			background: #FFFFFF;
		}
		
		.schedule-card h2, .info-card h2, .schedule-table td, .info-card li {
			color: #000000;
		}
	}
</style>