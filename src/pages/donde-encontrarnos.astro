---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={`¿Dónde Encontrarnos? - ${SITE_TITLE}`} description="Nuestra ubicación" />
	</head>
	<body style="background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);">
		<Header />
		<main>
			<h1>¿Dónde Encontrarnos?</h1>
			<div class="location-info">
				<div class="address">
					<h2>Dirección</h2>
					<p>Av. Bernardo O'Higgins 997</p>
					<p>Talagante, Región Metropolitana</p>
					<p>9670000</p>
				</div>
				<iframe 
					src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d207.54754981910787!2d-70.92752687563306!3d-33.663359389673545!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9662e234d0f47b95%3A0x61c86ab7213d4663!2sBanda%20Fotografica!5e0!3m2!1ses!2scl!4v1749166237963!5m2!1ses!2scl" 
					width="100%" 
					height="400" 
					style="border:0;" 
					allowfullscreen="" 
					loading="lazy" 
					referrerpolicy="no-referrer-when-downgrade"
					class="map-iframe">
				</iframe>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	body {
		margin: 0;
		padding: 0;
		/* background gradient applied inline */
	}
	main {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: 80vh;
	}
	h1 {
		text-align: center;
	}
	.location-info {
		display: grid;
		grid-template-columns: 1fr 2fr;
		gap: 2rem;
		margin-top: 2rem;
		align-items: center;
		justify-items: center;
	}

	/* ===== ADDRESS CARD ===== */
	.address {
		padding: 2rem;
		background: #FFFFFF; 
		border-radius: 1rem; /* Standardized radius */
		box-shadow: 0 4px 15px rgba(39, 39, 39, 0.1); /* Standardized shadow */
		text-align: center;
		border: 1px solid rgba(0, 0, 0, 0.1); /* Standardized border */
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.address:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 25px rgba(39, 39, 39, 0.15);
	}

	.address h2 {
		color: #000000; 
		font-weight: 600;
		margin-bottom: 1rem;
	}

	.address p {
		color: #000000; /* Changed to black */
		margin: 0.5rem 0;
	}

	.map-iframe {
		border-radius: 8px;
		overflow: hidden;
		display: block;
	}
	@media (max-width: 768px) {
		.location-info {
			grid-template-columns: 1fr;
		}
	}

	/* ===== HIGH CONTRAST MODE ===== */
	@media (prefers-contrast: high) {
		.address {
			background: #FFFFFF;
			border: 2px solid #000000;
		}
		
		.address h2 {
			color: #000000;
		}
		
		.address p {
			color: #000000;
		}
	}

	/* ===== PRINT STYLES ===== */
	@media print {
		.address {
			break-inside: avoid;
			box-shadow: none;
			border: 1px solid #000000;
			background: #FFFFFF;
		}
		
		.address h2, .address p {
			color: #000000;
		}
	}
</style>