<style>
    /* ===== CONTACT PAGE VARIABLES ===== */
    :root {
        --contact-gradient: linear-gradient(135deg, var(--primary-yellow) 0%, var(--primary-red) 100%);
        --card-shadow: 0 8px 32px rgba(39, 39, 39, 0.1);
        --card-shadow-hover: 0 16px 48px rgba(39, 39, 39, 0.15);
        --whatsapp-color: #25D366;
        --phone-color: var(--cadet-gray);
        --email-color: var(--primary-red);
    }
    
    /* ===== BASE STYLES ===== */
    body {
        margin: 0;
        background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    }
    
    .contact-main {
        min-height: calc(100vh - 200px);
        padding: 2rem 0;
    }

    /* ===== HERO SECTION ===== */
    .contact-hero {
        text-align: center;
        margin-bottom: 3rem;
        padding: 0 1rem;
    }
    
    .contact-title {
        font-size: clamp(2.5rem, 6vw, 4rem);
        margin-bottom: 1rem;
        background: var(--contact-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 700;
    }
    
    .contact-intro {
        font-size: clamp(1.1rem, 3vw, 1.4rem);
        color: var(--text-secondary);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
    }

    /* ===== CONTACT CONTAINER ===== */
    .contact-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 clamp(1rem, 4vw, 2rem);
    }
    
    /* ===== CONTACT CARDS ===== */
    .contact-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }
    
    .contact-card {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        text-decoration: none;
        color: inherit;
        box-shadow: var(--card-shadow);
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        position: relative;
        overflow: hidden;
        border: 2px solid transparent;
    }

    .contact-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: var(--contact-gradient);
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 0;
    }

    .contact-card:hover::before {
        opacity: 0.05;
    }
    
    .contact-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--card-shadow-hover);
        border-color: var(--primary-yellow);
    }

    /* ===== CARD COMPONENTS ===== */
    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1.5rem;
        position: relative;
        z-index: 1;
    }
    
    .contact-icon {
        font-size: 3rem;
        padding: 1rem;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s ease;
    }

    .contact-card:hover .contact-icon {
        transform: scale(1.1);
    }

    .whatsapp-icon {
        background: rgba(37, 211, 102, 0.1);
    }

    .phone-icon {
        background: rgba(144, 169, 183, 0.1);
    }

    .email-icon {
        background: rgba(255, 0, 0, 0.1);
    }
    
    .card-badge {
        background: var(--contact-gradient);
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(255, 0, 0, 0.3);
    }
    
    .card-content {
        position: relative;
        z-index: 1;
    }
    
    .card-title {
        font-size: 1.4rem;
        margin-bottom: 0.5rem;
        color: var(--text-primary);
        font-weight: 600;
    }
    
    .card-number {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--primary-red);
        margin-bottom: 1rem;
        font-family: 'Monaco', 'Menlo', monospace;
    }
    
    .card-description {
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }
    
    .card-features {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }
    
    .feature-tag {
        background: rgba(242, 234, 5, 0.1);
        color: var(--text-primary);
        padding: 0.3rem 0.8rem;
        border-radius: 12px;
        font-size: 0.85rem;
        font-weight: 500;
        border: 1px solid rgba(242, 234, 5, 0.3);
    }
    
    .card-action {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid rgba(39, 39, 39, 0.1);
        position: relative;
        z-index: 1;
    }
    
    .action-text {
        color: var(--primary-red);
        font-weight: 600;
        font-size: 1rem;
    }
    
    .action-arrow {
        color: var(--primary-red);
        font-size: 1.2rem;
        transition: transform 0.3s ease;
    }
    
    .contact-card:hover .action-arrow {
        transform: translateX(5px);
    }

    /* ===== CARD SPECIFIC STYLES ===== */
    .whatsapp-card:hover {
        border-color: var(--whatsapp-color);
    }

    .whatsapp-card .card-number {
        color: var(--whatsapp-color);
    }

    .whatsapp-card .action-text,
    .whatsapp-card .action-arrow {
        color: var(--whatsapp-color);
    }

    .phone-card:hover {
        border-color: var(--phone-color);
    }

    .phone-card .card-number {
        color: var(--phone-color);
    }

    .phone-card .action-text,
    .phone-card .action-arrow {
        color: var(--phone-color);
    }

    /* ===== CONTACT INFO SECTION ===== */
    .contact-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }
    
    .info-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        box-shadow: var(--card-shadow);
        border-left: 4px solid var(--primary-yellow);
    }
    
    .info-title {
        font-size: 1.3rem;
        margin-bottom: 1.5rem;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .info-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .info-list li {
        padding: 0.8rem 0;
        border-bottom: 1px solid rgba(39, 39, 39, 0.1);
        color: var(--text-secondary);
        position: relative;
        padding-left: 1.5rem;
    }

    .info-list li:last-child {
        border-bottom: none;
    }

    .info-list li::before {
        content: '‚Ä¢';
        color: var(--primary-red);
        font-weight: bold;
        position: absolute;
        left: 0;
    }
    
    .schedule-summary {
        margin-bottom: 1.5rem;
    }
    
    .schedule-summary p {
        margin: 0.5rem 0;
        color: var(--text-secondary);
    }
    
    .schedule-link {
        color: var(--primary-red);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .schedule-link:hover {
        color: var(--red-dark);
        transform: translateX(3px);
    }

    /* ===== RESPONSIVE DESIGN ===== */
    @media (max-width: 768px) {
        .contact-main {
            padding: 1rem 0;
        }

        .contact-hero {
            margin-bottom: 2rem;
        }
        
        .contact-cards {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        
        .contact-card {
            padding: 1.5rem;
        }

        .card-header {
            flex-direction: column;
            align-items: center;
            text-align: center;
            gap: 1rem;
        }

        .contact-icon {
            font-size: 2.5rem;
            padding: 0.8rem;
        }
        
        .contact-info {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        
        .info-card {
            padding: 1.5rem;
        }
    }
    
    @media (max-width: 480px) {
        .contact-card {
            padding: 1.2rem;
        }
        
        .card-title {
            font-size: 1.2rem;
        }
        
        .card-number {
            font-size: 1.1rem;
        }

        .contact-icon {
            font-size: 2rem;
            padding: 0.6rem;
        }
        
        .feature-tag {
            font-size: 0.8rem;
            padding: 0.2rem 0.6rem;
        }
    }

    /* ===== ACCESSIBILITY ===== */
    @media (prefers-reduced-motion: reduce) {
        .contact-card,
        .contact-icon,
        .action-arrow,
        .schedule-link {
            transition: none;
        }
        
        .contact-card:hover {
            transform: none;
        }
        
        .contact-card:hover .contact-icon {
            transform: none;
        }
        
        .contact-card:hover .action-arrow {
            transform: none;
        }
        
        .schedule-link:hover {
            transform: none;
        }
    }

    /* ===== HIGH CONTRAST MODE ===== */
    @media (prefers-contrast: high) {
        .contact-card {
            border: 2px solid black;
        }
        
        .contact-title {
            background: none;
            -webkit-text-fill-color: black;
            color: black;
        }
        
        .card-badge {
            background: black;
            color: white;
        }
        
        .feature-tag {
            background: black;
            color: white;
            border-color: black;
        }
    }

    /* ===== PRINT STYLES ===== */
    @media print {
        .contact-card {
            break-inside: avoid;
            box-shadow: none;
            border: 1px solid black;
        }
        
        .card-badge {
            background: transparent;
            color: black;
            border: 1px solid black;
        }
    }
</style>