<style>
  :root {
    --header-height: 70px;
    --header-bg: rgba(255, 255, 255, 0.95);
    --header-shadow: 0 2px 10px rgba(39, 39, 39, 0.05); /* Simplified shadow */
  }

  .site-header {
    position: sticky;
    top: 0;
    z-index: 1000;
    background: var(--header-bg);
    box-shadow: var(--header-shadow);
    border-bottom: 1px solid rgba(0,0,0,0.05); /* Simplified border */
  }

  /* .site-header.scrolled { ... }  <-- ELIMINADO */

  .navbar {
    display: flex;
    flex-direction: column;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 4vw, 2rem);
  }

  .navbar-brand {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    min-height: var(--header-height);
  }

  .logo {
    margin: 0;
  }

  .logo a {
    font-size: clamp(1.3rem, 4vw, 1.8rem);
    font-weight: 700;
    background: linear-gradient(135deg, var(--primary-red), var(--primary-yellow));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-decoration: none;
    position: relative;
  }

  .hamburger {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 32px;
    height: 24px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1001;
  }

  .hamburger:focus {
    outline: 2px solid var(--primary-red);
    outline-offset: 4px;
    border-radius: 4px;
  }

  .hamburger-line {
    display: block;
    width: 100%;
    height: 3px;
    background: linear-gradient(135deg, var(--primary-red), var(--primary-yellow));
    border-radius: 2px;
    transform-origin: center;
  }

  .hamburger[aria-expanded="true"] .hamburger-line:nth-child(1) {
    transform: translateY(10.5px) rotate(45deg);
  }

  .hamburger[aria-expanded="true"] .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: scaleX(0);
  }

  .hamburger[aria-expanded="true"] .hamburger-line:nth-child(3) {
    transform: translateY(-10.5px) rotate(-45deg);
  }

  .mobile-menu {
    display: none;
    background: rgba(255, 255, 255, 0.98); /* Kept for distinct mobile menu background */
    padding: 1rem;
    border-radius: 0 0 1rem 1rem;
    box-shadow: 0 4px 15px rgba(39, 39, 39, 0.05); /* Simplified shadow */
    border-top: 1px solid rgba(242, 234, 5, 0.2); /* Slightly adjusted alpha for subtlety */
  }

  .mobile-menu.active {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .mobile-menu a {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.8rem 1.2rem; /* Adjusted padding for consistency */
    color: black; /* Changed to black for better contrast */
    text-decoration: none;
    font-weight: 500;
    border-radius: 8px; /* Slightly smaller radius for a cleaner look */
    transition: background-color 0.2s ease, color 0.2s ease; /* Simple transition for active state */
  }

  .mobile-menu a.active {
    background: rgba(242, 234, 5, 0.15); /* Simplified: Light yellow background */
    color: var(--primary-red); /* Keeps text red for active mobile link */
    font-weight: 600;
  }

  @media (min-width: 769px) {
    .navbar {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    .navbar-brand {
      padding: 1.2rem 0;
    }

    .hamburger {
      display: none;
    }

    .mobile-menu {
      display: flex;
      flex-direction: row;
      gap: 0.5rem;
      padding: 0;
      box-shadow: none;
      background: transparent;
      border-radius: 0;
      border-top: none;
    }

    .mobile-menu a {
      padding: 0.8rem 1.2rem;
      border-radius: 25px; /* Kept distinct desktop radius */
      /* color: black; will be inherited from the base .mobile-menu a rule */
    }

    .mobile-menu a.active {
      background: var(--primary-red); /* Solid red background */
      color: white; /* Keeps text white for active desktop link */
      font-weight: 600; /* Ensure font weight remains for active desktop */
      box-shadow: 0 2px 8px rgba(255, 0, 0, 0.2); /* Softer shadow for active desktop */
    }
  }

  @media (min-width: 1200px) {
    .mobile-menu {
      gap: 1rem;
    }

    .mobile-menu a {
      padding: 1rem 1.5rem;
      font-size: 1.1rem;
    }
  }

  @media (max-width: 480px) {
    .navbar {
      padding: 0 1rem;
    }

    .logo a {
      font-size: 1.2rem;
    }

    .mobile-menu a {
      padding: 0.8rem 1rem;
      font-size: 0.95rem;
    }
  }

  @media (prefers-contrast: high) {
    .site-header {
      background: white;
      border-bottom: 2px solid black;
    }

    .logo a {
      background: none;
      -webkit-text-fill-color: black;
      color: black;
    }

    .hamburger-line {
      background: black;
    }

    .mobile-menu { /* Added for high contrast */
      background: white;
      border-top: 1px solid black;
    }

    .mobile-menu a {
      color: black;
    }

    .mobile-menu a.active {
      background: black;
      color: white;
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const header = document.querySelector('.site-header');

    // Mobile menu toggle
    menuToggle?.addEventListener('click', () => {
      const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
      menuToggle.setAttribute('aria-expanded', !isExpanded);
      mobileMenu?.classList.toggle('active');
      document.body.style.overflow = isExpanded ? 'auto' : 'hidden';
    });

    // Close menu when clicking on a link
    mobileMenu?.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        menuToggle.setAttribute('aria-expanded', 'false');
        mobileMenu?.classList.remove('active');
        document.body.style.overflow = 'auto';
      });
    });

    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      if (header && !header.contains(e.target) && mobileMenu?.classList.contains('active')) {
        // Check if the click is outside the header AND the menu is active
        // Also ensure the click is not on the toggle button itself
        if (menuToggle && !menuToggle.contains(e.target)) {
          menuToggle.setAttribute('aria-expanded', 'false');
          mobileMenu?.classList.remove('active');
          document.body.style.overflow = 'auto';
        }
      }
    });

    // Handle escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && mobileMenu?.classList.contains('active')) {
        menuToggle.setAttribute('aria-expanded', 'false');
        mobileMenu?.classList.remove('active');
        document.body.style.overflow = 'auto';
        menuToggle?.focus();
      }
    });
  });
</script>
