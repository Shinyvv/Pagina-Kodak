	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-links a {
		color: rgb(var(--gray));
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.social-links a:hover {
		color: var(--accent);
	}

	.footer-bottom {
		margin-top: 2rem;
		padding-top: 1rem;
		border-top: 1px solid rgb(var(--gray-light));
		text-align: center;
		color: rgb(var(--gray));
	}

	@media (max-width: 768px) {
		.footer-content {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.social-links {
			justify-content: center;
		}
	}
</style>