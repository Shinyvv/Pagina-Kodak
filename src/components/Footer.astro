<style>
	footer {
		background: white;
		padding: 2rem 1rem;
		margin-top: 4rem;
		box-shadow: 0 -2px 8px rgba(var(--black), 5%);
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.footer-section h3 {
		margin-bottom: 1rem;
		color: rgb(var(--black));
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-links a {
		color: rgb(var(--gray));
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.social-links a:hover {
		color: var(--accent);
	}

	.footer-bottom {
		margin-top: 2rem;
		padding-top: 1rem;
		border-top: 1px solid rgb(var(--gray-light));
		text-align: center;
		color: rgb(var(--gray));
	}

	@media (max-width: 768px) {
		.footer-content {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.social-links {
			justify-content: center;
		}
	}
</style>